<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CodeTest_Boost" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/teal_700</item>
        <item name="colorPrimaryVariant">@color/teal_200</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:splitMotionEvents">false</item>
        <item name="android:windowEnableSplitTouch">false</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:topLeftRadius">25dp</item>
        <item name="android:topRightRadius">25dp</item>
    </style>

    <style name="BottomNavigationView.Size" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="BottomNavigationView.Size.Active" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="CustomEditText" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="android:textSize">18sp</item>
        <item name="colorControlNormal">#BCD3D2</item>
        <item name="colorControlActivated">#B9CFCF</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:strokeColor">#BCD3D2</item>
        <item name="boxStrokeColor">@color/mtrl_textinput_default_box_stroke_color</item>
        <item name="android:textColorPrimary">@color/poke_green</item>
        <item name="android:textColorHint">#B9CFCF</item>
        <item name="android:colorAccent">@color/poke_green</item>
        <item name="boxStrokeWidth">2dp</item>
    </style>

    <style name="customChipText" parent="TextAppearance.MaterialComponents.Chip">
        <item name="android:textSize">14sp</item>
    </style>

</resources>